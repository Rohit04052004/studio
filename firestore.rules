
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // - Allow users to read and update their own profile.
    // - Deny all other access.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create, delete: if false;
    }

    // Reports Collection (Example of other rules)
    // You can add rules for your other collections here.
    // For example, allow users to manage their own reports.
    match /reports/{reportId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // AssistantChats Collection (Example of other rules)
    match /assistantChats/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
